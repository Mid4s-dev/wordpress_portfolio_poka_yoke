{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#0369A1",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#0EA5E9",
                    "name": "Secondary"
                },
                {
                    "slug": "background",
                    "color": "#FFFFFF",
                    "name": "Background"
                },
                {
                    "slug": "foreground",
                    "color": "#111827",
                    "name": "Foreground"
                },
                {
                    "slug": "tertiary",
                    "color": "#6B7280",
                    "name": "Gray 500"
                },
                {
                    "slug": "accent",
                    "color": "#F59E0B",
                    "name": "Accent"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
                    "slug": "system-font",
                    "name": "System Font"
                },
                {
                    "fontFamily": "'Inter', sans-serif",
                    "slug": "inter",
                    "name": "Inter"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "X Large"
                },
                {
                    "slug": "xx-large",
                    "size": "2rem",
                    "name": "2X Large"
                },
                {
                    "slug": "xxx-large",
                    "size": "3rem",
                    "name": "3X Large"
                }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        },
        "spacing": {
            "units": [ "px", "em", "rem", "vh", "vw", "%" ]
        }
    }
}
