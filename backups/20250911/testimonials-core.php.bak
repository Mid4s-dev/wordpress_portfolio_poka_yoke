            'set_featured_image'    => __('Set client image', 'portfolio'),
            'remove_featured_image' => __('Remove client image', 'portfolio'),
            'use_featured_image'    => __('Use as client image', 'portfolio'),
            'archives'              => __('Testimonial archives', 'portfolio'),
        );
        
        $args = array(
            'labels'             => $labels,
